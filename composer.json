{
    "name": "jdz/crypt",
    "type": "library",
    "description": "Simple Crypt/Decrypt utility",
    "keywords": [
        "JDZ",
        "utilities",
        "crypt"
    ],
    "homepage": "https://jdz.joffreydemetz.com/crypt/",
    "license": "MIT",
    "authors": [
        {
            "name": "Joffrey Demetz",
            "email": "joffrey.demetz@gmail.com",
            "homepage": "https://joffreydemetz.com",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "JDZ\\Crypt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JDZ\\Crypt\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}